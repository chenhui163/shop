/* pages/cart/index.wxss */


/* 增加收货人信息提示 */
.addConsignee{
    text-align: center;
    height: 208rpx;
    line-height: 208rpx;
    background: #f4f4f4;
    color: #333333;
}
.newAddress{
    color: rgb(238, 75, 25);
}

/* 收件人信息部分样式 */
.consignee{
    padding: 0 18rpx;
    font-size: 15px;
    color: #333333;
}
.consignee_contact{
    display: flex;
    justify-content: space-between;
    align-items: center;
    margin: 45rpx 0 55rpx 0 ;
}
.contact_name text:first-child{
    margin-right: 55rpx;
}
.contact_phone{
    margin-right: 15rpx;
}
.contact_phone text:first-child{
    margin-right: 55rpx;
}
.consignee_address{
    margin-bottom: 30rpx;
}
.consignee_address text{
    margin-right: 25rpx;
}

/* 分隔条 */
.separation_image{
    width: 100%;
    height: 14rpx;
}

/* 购物车商品列表样式 */
.goods{
    border-bottom: 30px solid #f4f4f4;
}
.goods_shop{
    border-top: 20rpx solid #f4f4f4;
}
.shop_name{
    padding-left: 33rpx;
    height: 87rpx;
    line-height: 87rpx;
    font-size: 15px;
    color: #333333;
    border-bottom: 1px solid #dddddd;
}
.shop_name text:first-child{
    margin-right: 16rpx;
    font-size: 14px;
    color: #9e9e9e;
}

.goods_item{
    display: flex;
    height: 205rpx;
}
.item_checked{
    display: flex;
    justify-content: center;
    align-items: center;
    width: 88rpx;
}
.item_info{
    flex: 1;
    display: flex;
    padding: 25rpx 18rpx 18rpx 0;
    border-bottom: 1px solid #dddddd;
}
.item_info image{
    width: 160rpx;
    height: 160rpx;
    background: orangered;
}
.info_text{
    flex: 1;
    display: flex;
    flex-direction: column;
    justify-content: space-between;
    margin-left: 24rpx;
}
.text_title{
    font-size: 14px;

    text-overflow: ellipsis;
    overflow: hidden;
    display: -webkit-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
}
.text_choose{
    display: flex;
    justify-content: space-between;
}
.text_choose>view:first-child{
    margin-right: 4px;
    font-size: 10px;
    color: #eb4450;
}
.text_choose>view:first-child>text{
    font-size: 14px;
}
.choose_count{
    display: flex;
    justify-content: center;
    align-items: center;
    font-size: 12px;
    color: #333333;
}
.choose_count view{
    width: 52rpx;
    height: 42rpx;
    border: 1px solid #666666;
    border-radius: 4px;
    text-align: center;
    line-height: 42rpx;
}
.choose_count text{
    padding: 0 35rpx;
}

/* 结算部分样式 */
.orderForm{
    display: flex;
    height: 97rpx;
}
.orderForm_check{
    display: flex;
    align-items: center;
    width: 270rpx;
    font-size: 14px;
}
.orderForm_check icon{
    margin: 0 30rpx; 
}
.orderForm_total{
    flex: 1;
    height: 97rpx;
    box-sizing: border-box;
}
.total_money{
    display: flex;
    padding-top: 15rpx;
    font-size: 14px;
}
.money_price{
    margin-left: 25rpx;
    color: #eb4450;
}
.orderForm_total>text:last-child{
    font-size: 12px;
    color: #9b9a9b;
}
.orderForm_btn{
    width: 230rpx;
    background: #eb4450;
    color: #fff;
    text-align: center;
    line-height: 97rpx;
}

/* 购物车为空提示的样式 */
.tips{
    display: flex;
    flex-direction: column;
    align-items: center;
    padding-top: 100rpx;
}
.tips_image{
    width: 180rpx;
    height: 180rpx;
}
.tips_title{
    display: flex;
    margin-top: 50rpx;
    font-size: 14px;
    color: #333333;
}
.tips_title navigator{
    color: #eb4450;
}