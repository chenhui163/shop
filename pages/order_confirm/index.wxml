<!--pages/order_confirm/index.wxml-->

<!-- 收货人信息部分 -->
<view class="consignee">
    <view class="consignee_contact">
        <view class="contact_name">
            <text>收货人:</text>
            <text>陈</text>
        </view>
        <view class="contact_phone">
            <text>联系方式:</text>
            <text>17888888888</text>
        </view>
    </view>
    <view class="consignee_address">
        <text>收货地址:</text>
        <text>广东省广州市调和去</text>
    </view>
</view>

<!-- 彩色分隔条 -->
<image class="separation_image" src="../../images/cart_border@2x.png"></image>

<!-- 购物车商品列表 -->
<view class="goods">
    <view class="goods_shop">
        <view class="shop_name">
            <text class="iconfont icon-dianpu"></text>
            <text>优购生活馆</text>
        </view>
        <view class="shop_goods">
            <view class="goods_item">
                <view class="item_info">
                    <image src="#" mode="scaleToFill"></image>
                    <view class="info_text">
                        <text class="text_title">商品名称</text>
                        <view class="text_price">
                            <view>￥<text>999</text></view>
                            <view>
                                <text>×</text>
                                <text>1</text>
                            </view>
                        </view>
                    </view>
                </view>
            </view>
        </view>
    </view>
</view>

<!-- 提交订单按钮 -->
<view class="order_submit">
    <view class="submit_text">
        <text>实付款:</text>
        <text>￥</text>
        <text>999</text>
    </view>
    <view class="submit_btn">提交订单</view>
</view>
